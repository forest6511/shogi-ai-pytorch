{
  "permissions": {
    "allow": [
      "Bash(uv sync)",
      "Bash(uv run pytest *)",
      "Bash(uv run ruff *)",
      "Bash(uv run mypy *)",
      "Bash(uv run shogi-ai *)",
      "Bash(python *)",
      "Bash(git status *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git branch *)",
      "Bash(git show *)",
      "Bash(git checkout *)",
      "Bash(git add src/*)",
      "Bash(git add tests/*)",
      "Bash(git commit *)",
      "Bash(git tag *)"
    ]
  },
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"]
    }
  }
}
